<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/top_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:padding="130dp"
        android:text="@string/textview_login"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:hint="@string/id"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/top_login" />

    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:hint="@string/password"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/id" />

    <Button
        android:id="@+id/loginButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/button_login"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/password" />

    <ImageView
        android:id="@+id/googleImage"
        android:layout_width="50dp"
        android:layout_height="50dp"

        android:src="@drawable/ic_logo_google"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.3"
        app:layout_constraintTop_toBottomOf="@+id/loginButton" />

    <ImageView
        android:id="@+id/naverImage"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_logo_naver"
        android:layout_marginLeft="20dp"
        app:layout_constraintLeft_toRightOf="@+id/googleImage"
        app:layout_constraintBottom_toBottomOf="@+id/googleImage"
        app:layout_constraintTop_toTopOf="@+id/googleImage" />

    <ImageView
        android:id="@+id/kakaoButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="50dp"
        android:src="@drawable/ic_logo_kakao"
        app:layout_constraintStart_toEndOf="@+id/naverImage"
        app:layout_constraintBottom_toBottomOf="@+id/naverImage"
        app:layout_constraintTop_toTopOf="@+id/naverImage"

         />


    <TextView
        android:id="@+id/signUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sign_up"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintTop_toBottomOf="@+id/naverImage" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/signUp"
        app:layout_constraintStart_toEndOf="@+id/signUp"
        app:layout_constraintBottom_toBottomOf="@+id/signUp"
        android:layout_marginLeft="20dp"

        android:text="@string/find_pw"

        />


</androidx.constraintlayout.widget.ConstraintLayout>